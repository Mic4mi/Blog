<%- include("partials/header") %>

<div class="ui main container segment">
    <div class="ui huge header"> Edit "<%= blog.title %>" </div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[img]" value="<%= blog.img %>" required>
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <a href="/blogs" class="ui purple basic button">Go Back</a>
        <button class="ui purple basic button">Submit</button>
    </form>

</div>

<%- include("partials/footer") %>