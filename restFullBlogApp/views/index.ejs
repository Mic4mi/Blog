<%- include("partials/header") %>

<h1>INDEX PAGE!!! </h1>

<% blogs.forEach(function(blog){ %>
<div>
    <h2> <%= blog.title %> </h2>
    <img src="<%= blog.img %>">
    <span><%= blog.date.toDateString() %></span>
    <p>
        <%= blog.body.substring(0, 100) %> (...)
    </p>
    <a href="/blogs/<%=blog._id%>">Read More</a>
    <% }); %>

